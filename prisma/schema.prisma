// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  user_id          String    @id @default(cuid())
  name             String
  company_number   String
  email            String    @unique
  password         String
  date_inscription DateTime  @default(now())
  date_update      DateTime? @updatedAt

  modules     Module[]
  bills       Bill[]
  userClients UserClient[]
}

model Client {
  client_id     String    @id @default(cuid())
  name          String
  email         String    @unique
  address       String
  status        String
  date_creation DateTime  @default(now())
  date_update   DateTime? @updatedAt

  ICALs       ICAL[]
  bills       Bill[]
  userClients UserClient[]
}

model ICAL {
  ical_id    String   @id @default(cuid())
  url        String   @unique
  date_start DateTime
  date_end   DateTime

  client    Client @relation(fields: [client_id], references: [client_id])
  client_id String

  icalModules ICALModule[]
}

model Module {
  module_id  String @id @default(cuid())
  name       String
  unit_price Int
  duration   String

  user    User   @relation(fields: [user_id], references: [user_id])
  user_id String

  icalModules ICALModule[]
}

model Bill {
  bill_id       String    @id @default(cuid())
  date_creation DateTime  @default(now())
  date_update   DateTime? @updatedAt
  date_echeance DateTime
  tva           Int?
  status        String

  client    Client @relation(fields: [client_id], references: [client_id])
  client_id String

  user    User   @relation(fields: [user_id], references: [user_id])
  user_id String
}

model UserClient {
  user_id   String
  client_id String

  user   User   @relation(fields: [user_id], references: [user_id])
  client Client @relation(fields: [client_id], references: [client_id])

  @@id([user_id, client_id])
}

model ICALModule {
  ical_id   String
  module_id String

  ical   ICAL   @relation(fields: [ical_id], references: [ical_id])
  module Module @relation(fields: [module_id], references: [module_id])

  @@id([ical_id, module_id])
}
